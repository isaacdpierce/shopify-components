{%- assign banner_image = section.settings.banner_image -%}  

{% comment %}
  Add positioning option for top, center, bottom in schema.
{% endcomment %}

<div class="banner"> 
  <img class="banner__image" src="{{ banner_image | img_url: '1200x' }}" /> 
</div>


{% style %}

.banner {
  height: 200px;
  width: 100vw;
  overflow: hidden;
}

.banner__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}   

{% endstyle %}

{% schema %}
  {
    "name": "Section Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Header Image"
      }
    ]
  }
{% endschema %}
